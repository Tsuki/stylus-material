@require "../"

sm-init()

p
  sm-flow-text()

ol > li
  sm-flow-text()

header.main
  & nav
    sm-navbar()

main
  sm-container()

  article
    sm-z: 1
    margin: 1rem
    padding: 1rem
    > h1
      font-size: 2.9 rem

  pre
    &:before
      visibility: hidden
    &:after
      visibility: hidden

  .codes
    sm-columns(2, 1, 1)

  section
    sm-view()
    padding-top: 50px

  section#chips
    & .chip
      sm-chip()

  section#flow-text
    & p
      sm-flow-text()

  section#buttons
    & button
      margin 1rem
      &.default
        sm-button()
      &.flat
        sm-button-flat()
      &.large
        sm-button-large()
      &.disc
        sm-button-disc()

  section#cards
    & .cards-list
      sm-columns(2)
    & article
      &.default
        sm-card()
      &.title-below-image
        sm-card($title-in-image: false)
      &.green
        sm-card($text-protection: darkgreen)
      &.light
        sm-card($text-protection: white, $title-color: black)

  section#collection
    & ul
      sm-collection($img-circle: true)

  section#horizontal-list
    & ul
      sm-horizontal-list('â€”')

  section#navbar
    & header
      & nav
        sm-navbar($fixed: false, $align-right: false)

footer
  sm-footer()

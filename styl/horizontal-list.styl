@require "./variables.styl"
@require "./z"

// Mixin: Horizontal List
//
// Create a horizontal text list with a separator. See example for defaults.
//
// ex. sm-horizontal-list($separator: '', $separator-font: false)
sm-horizontal-list($separator = '', $separator-font = false)
  list-style: none
  & > *
    display: inline-block
    &:before
      if $separator-font
        font-family: $separator-font
        font-weight: normal
        font-style: normal
        -webkit-font-smoothing: antialiased
      content: $separator
      vertical-align: top
      margin: 0 10px 0 8px

    &:first-child:before
      display: none
